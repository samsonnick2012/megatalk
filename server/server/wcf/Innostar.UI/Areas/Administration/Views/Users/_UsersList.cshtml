@using Innostar.UI.Areas.Administration.ViewModels
@model UsersViewModel

@Html.HiddenFor(model => model.chatUserViewModels.PageInfo.PageNumber, new { id = "page-number"})

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Все: @Html.CheckBoxFor(modelItem => modelItem.allSelected, new { id = "allSelectedCbx" })
        </th>
        <th>Логин
        </th>
        <th>Имя
        </th>
        <th>Email
        </th>
        <th>Дата регистрации
        </th>
        <th>Безопасный режим
        </th>
        <th>Дата активации
        </th>
        <th>Дата окончания подписки
        </th>
    </tr>

    @foreach (var item in Model.chatUserViewModels.Items)
    {
        <tr>
            <td class="title">
                @Html.CheckBoxFor(modelItem => item.Selected, new { @class = "selectedCbx", data_login = item.XmppLogin })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.SafeModeActivated, new { @class = "SafeCbx", data_id = item.Id })
            </td>
            <td>
                @if (item.SafeModeActivated)
                {
                    @Html.DisplayFor(modelItem => item.SafeModeStartDate)
                }
            </td>
            <td>
                @if (item.SafeModeActivated)
                {
                    @Html.DisplayFor(modelItem => item.SafeModeEndDate)
                }
            </td>
        </tr>
    }

</table>

@Html.Partial("_PagingForUsers", Model.chatUserViewModels)