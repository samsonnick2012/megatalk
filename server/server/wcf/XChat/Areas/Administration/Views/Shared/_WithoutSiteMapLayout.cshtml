@using System.Web.Mvc.Html
@using System.Web.Optimization
@{
	Layout = "../Shared/_LayoutBase.cshtml";
}

@section css
{
	@Styles.Render("~/Content/bootstrapcontrols")
	@RenderSection("css", false)
}

@section headScripts
{
	@Scripts.Render("~/bundles/bootstrapcontrols")
}

@section navbar{
	@if (Request.IsAuthenticated)
 {
		<div class="navbar navbar-default">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Карта науки: Панель администрирования", "Index", "Home", null, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse navbar-responsive-collapse">
				<ul class="nav navbar-nav">
					<li>
						@Html.ActionLink("Организации", "Index", "Organizations")
					</li>
					<li>
						@Html.ActionLink("Персоны", "Index", "Persons")
					</li>
					<li>
						@Html.ActionLink("Проекты", "Index", "Projects")
					</li>
					<li>
						@Html.ActionLink("Ресурсы", "Index", "Resources")
					</li>
					<li>
						@Html.ActionLink("Справочники", "Index", "Catalogs")
					</li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
						<section id="login">
							@Html.Partial("Account/_Login")
						</section>
					</li>
				</ul>
			</div>
		</div>
 }
}

@section scripts{
	@RenderSection("scripts", false)
}

<section class="content-wrapper main-content clear-fix">
	@RenderSection("title", false)
	@RenderBody()
</section>

